<section class="settings">
    <h1 class="main-heading">Settings</h1>

    <form action="">
        <div class="input-box">
            <h3 class="sub-heading">Personal settings</h3>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group clearfix">
                        <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'admin-agent.label.agent-image'}}
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-7 col-sm-7 col-xs-12 user-img">
                            <div class="dropzone dropzone-clickable"></div>
                        </div>
                    </div>
                    <div class="form-group clearfix">
                        <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'settings.labels.facebook-link'}}
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-7 col-sm-7 col-xs-12">
                            {{input type="text" class="form-control" }}
                        </div>
                    </div>
                    <div class="form-group clearfix">
                        <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'settings.labels.twitter-link'}}
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-7 col-sm-7 col-xs-12">
                            {{input type="text" class="form-control" }}
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group clearfix">
                        <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'admin-agent.label.language'}}
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-7 col-sm-7 col-xs-12">
                            {{elements/language-select }}
                            {{#if (get changeset.error 'nationality')}}
                                <ul class="error-list">
                                    {{#each (get (get changeset.error 'nationality') "validation") as |message|}}
                                        <li>{{message}}</li>
                                    {{/each}}
                                </ul>
                            {{/if}}
                        </div>
                    </div>
                    <div class="form-group clearfix">
                        <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'settings.labels.confirmation-mail'}}
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-7 col-sm-7 col-xs-12">
                            {{input type="text" class="form-control" }}
                        </div>
                    </div>
                    <div class="form-group clearfix">
                        <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'settings.labels.paypal'}}
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-7 col-sm-7 col-xs-12">
                            {{input type="text" class="form-control" }}
                        </div>
                    </div>
                    <div class="form-group clearfix">
                        <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'settings.labels.easycall'}}
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-7 col-sm-7 col-xs-12">
                            {{input type="text" class="form-control" }}
                        </div>
                    </div>
                    <div class="form-group clearfix">
                        <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'settings.labels.gplus-link'}}
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-7 col-sm-7 col-xs-12">
                            {{input type="text" class="form-control" }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <h1 class="main-heading">{{trans 'settings.labels.commissions'}}</h1>
        <div class="input-box">
            <h3 class="sub-heading">{{trans 'settings.labels.referral'}}</h3>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group clearfix">
                        <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'settings.labels.setup-fee'}}
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-7 col-sm-7 col-xs-12">
                            {{input type="text" class="form-control" }}
                        </div>
                    </div>

                    <div class="form-group clearfix">
                        <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'settings.labels.packages'}}
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-7 col-sm-7 col-xs-12">
                            {{input type="text" class="form-control" }}
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group clearfix">
                        <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'settings.labels.connect'}}
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-7 col-sm-7 col-xs-12">
                            {{input type="text" class="form-control" }}
                        </div>
                    </div>
                    <div class="form-group clearfix">
                        <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'settings.labels.stream'}}
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-7 col-sm-7 col-xs-12">
                            {{input type="text" class="form-control" }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="input-box">
            <h3 class="sub-heading">{{trans 'settings.labels.active-agents'}}</h3>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group clearfix">
                        <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'settings.labels.setup-fee'}}
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-7 col-sm-7 col-xs-12">
                            {{input type="text" class="form-control" }}
                        </div>
                    </div>

                    <div class="form-group clearfix">
                        <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'settings.labels.packages'}}
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-7 col-sm-7 col-xs-12">
                            {{input type="text" class="form-control" }}
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group clearfix">
                        <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'settings.labels.connect'}}
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-7 col-sm-7 col-xs-12">
                            {{input type="text" class="form-control" }}
                        </div>
                    </div>
                    <div class="form-group clearfix">
                        <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'settings.labels.stream'}}
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-7 col-sm-7 col-xs-12">
                            {{input type="text" class="form-control" }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
