                    </div>
                    <div class="form-group clearfix">
                        <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'settings.labels.for-period-less'}}
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-7 col-sm-7 col-xs-12">
                            {{input type="text" class="form-control" }} <span class="input-span-addon">{{trans 'settings.labels.month(s)'}}</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group clearfix">
                <button class="btn btn-success pull-right" type="submit" disabled={{isLoading}}>
                    {{#if isLoading }}
                        {{inf-loading}}
                    {{else}}
                        {{trans 'button.save'}}
                    {{/if}}

                </button>
            </div>
        </div>
    </form>
</section>