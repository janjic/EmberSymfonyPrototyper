<h1 class="main-heading">Add new mass mail campaign</h1>
<div class="row">
    <div class="col-md-6">
        <div class="form-group clearfix">
            <label class="control-label col-md-5 col-sm-5 col-xs-12" for="packages">Add packages for mass mail campaign</label>
            <div class="col-md-7 col-sm-7 col-xs-12">
                <select class="form-control">
                    <option>Type 1</option>
                    <option>Type 2</option>
                </select>
            </div>
        </div>
        <div class="form-group clearfix">
            <label class="control-label col-md-5 col-sm-5 col-xs-12">Subject</label>
            <div class="col-md-7 col-sm-7 col-xs-12">
                <input class="form-control" type="text" placeholder="Please enter subject">
            </div>
        </div>
        <div class="form-group clearfix">
            <label class="control-label col-md-5 col-sm-5 col-xs-12">Choose mail list
                <span class="required" aria-required="true"> * </span>
            </label>
            <div class="col-md-7 col-sm-7 col-xs-12">
                <select class="form-control">
                    <option value="0" selected>Please choose mail lists</option>
                    <option value="1">dsfdsfdsf</option>
                    <option value="2">asdasdsadsa</option>
                </select>
            </div>
        </div>
        <div class="form-group clearfix">
            <div class="col-md-12">
                <label for="emails" class="control-label">Add Email Addresses Manually</label>
                <textarea class="form-control" name="emails" id="" cols="30" rows="5"></textarea>
            </div>
        </div>
        <div class="form-group clearfix">
            <div class="col-md-12">
                <a href="#" class="btn btn-danger">Submit email addresses</a>
            </div>
        </div>
        <div class="form-group clearfix">
            <div class="col-md-12">
                <label for="emails" class="control-label">Description</label>
                <textarea class="form-control" name="emails" id="" cols="30" rows="5"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <a href="#" class="pull-right btn btn-success">Save</a>
            </div>
        </div>
    </div>
</div>

