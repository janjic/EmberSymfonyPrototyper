<h1 class="main-heading clearfix">Purchase details <span class="pull-right">{{#link-to 'dashboard.agent.users.user-view' class='btn btn-danger'}}Customer profile{{/link-to}}</span></h1>

<div class="top-options">
    <div class="row">
        <div class="col-md-6">
            <div class="info-box">
                <h3>Content republic</h3>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <p><strong>First Name</strong></p>
                            <p>{{model.user.firstName}}</p>
                        </div>
                        <div class="form-group">
                            <p><strong>Last Name</strong></p>
                            <p>{{model.user.lastName}}</p>
                        </div>
                        <div class="form-group">
                            <p><strong>Email</strong></p>
                            {{model.user.email}}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <p><strong>Order ID</strong></p>
                            <p>{{model.id}}</p>
                        </div>
                        <div class="form-group">
                            <p><strong>Date created</strong></p>
                            <p>{{model.created_at}}</p>
                        </div>
                        <div class="form-group">
                            <p><strong>Country</strong></p>
                            <p>{{model.user.country}}</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="iframe-wrapper">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d181139.85102770833!2d20.422596999999996!3d44.81524535!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2srs!4v1478703045731" width="600" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>

<div class="purchase-tables">
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>Package</th>
                        <th>Duration</th>
                        <th>Price</th>
                        <th>Currency</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each model.items as |item| }}
                        <tr>
                            <td>{{item.product}}</td>
                            <td>{{item.date_from}} {{item.date_to}}*******</td>
                            <td>{{item.unit_price}}</td>
                            <td>{{currency-for-country model.user.country}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>Article</th>
                        <th>Duration</th>
                        <th>Price</th>
                        <th>Currency</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>One time account setup fee</td>
                        <td>3 months</td>
                        <td>22.00</td>
                        <td>EUR</td>
                    </tr>
                    <tr>
                        <td>Connect</td>
                        <td>3 months</td>
                        <td>22.00</td>
                        <td>EUR</td>
                    </tr>
                    <tr>
                        <td>1 streams</td>
                        <td>3 months</td>
                        <td>22.00</td>
                        <td>EUR</td>
                    </tr>
                    <tr>
                        <td>Price for remaining days until the end of month</td>
                        <td>3 months</td>
                        <td>22.00</td>
                        <td>EUR</td>
                    </tr>
                    </tbody>
                    <tfoot>
                    <tr>
                        <td>Total</td>
                        <td></td>
                        <td>EUR 47.87</td>
                        <td><i class="fa fa-print"></i></td>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>