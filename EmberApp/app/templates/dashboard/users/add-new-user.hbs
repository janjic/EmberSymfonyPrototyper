<div class="row">
    <div class="col-md-12">
        <section class="form-wizard">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="main-heading">Add New User</h1>
                </div>
            </div>
            <form role="form">
                <div class="row setup-content">
                    <div class="col-md-6">

                        <div class="form-group clearfix">
                            <label class="control-label col-md-5 col-xs-5">Title
                                <span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-7 col-xs-7">
                                <select class="form-control" name="username">
                                    <option value="1">Mr.</option>
                                    <option value="2">Mrs.</option>
                                    <option value="3">Ms.</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="control-label col-md-5 col-xs-5">Name
                                <span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-7 col-xs-7">
                                <input type="text" placeholder="" class="form-control" name="username">
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="control-label col-md-5 col-xs-5">Family name
                                <span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-7 col-xs-7">
                                <input type="text" placeholder="" class="form-control" name="username">
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="control-label col-md-5 col-xs-5">Password
                                <span class="required"  aria-required="true"> * </span>
                            </label>
                            <div class="col-md-7 col-xs-7">
                                <input type="text" placeholder="" class="form-control" name="username">
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="control-label col-md-5 col-xs-5">Repeat Password
                                <span class="required"  aria-required="true"> * </span>
                            </label>
                            <div class="col-md-7 col-xs-7">
                                <input type="text" class="form-control" name="username">
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="control-label col-md-5 col-xs-5">Email
                                <span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-7 col-xs-7">
                                <input type="email" class="form-control" name="username">
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="control-label col-md-5 col-xs-5">Repeat email
                                <span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-7 col-xs-7">
                                <input type="email" class="form-control" name="username">
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="control-label col-md-5 col-xs-5">Insert user image
                                <span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-7 user-img">
                                <input type="button" class="form-control drag-and-drop" name="username" placeholder="asd">
                                <div class="insert-avatar-container text-center" >
                                    <button class="insert-avatar">Insert avatar</button>
                                    <span>Or</span>
                                    <span>Drag and Drop</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">


                        <div class="form-group clearfix">
                            <label class="control-label col-md-5 col-xs-5">Street and number
                                <span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-7 col-xs-7">
                                <input type="text" class="form-control" name="username">
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="control-label col-md-5 col-xs-5">Postcode
                                <span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-7 col-xs-7">
                                <input type="text" class="form-control" name="username">
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="control-label col-md-5 col-xs-5">City
                                <span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-7 col-xs-7">
                                <input type="email" class="form-control" name="username">
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="control-label col-md-5 col-xs-5">Country
                                <span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-7 col-xs-7">
                                <input type="email" class="form-control" name="username">
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="control-label col-md-5 col-xs-5">Phone number
                                <span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-7 col-xs-7">
                                <input type="text" class="form-control" name="username">
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="control-label col-md-5 col-xs-5">Language
                                <span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-7 col-xs-7">
                                <input type="email" class="form-control" name="username">
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="control-label col-md-5 col-xs-5">Date of birth
                                <span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-7 col-xs-7">
                                <input type="email" class="form-control" name="username">
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="control-label col-md-5 col-xs-5">Admin
                                <span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-7">
                                <div class="onoffswitch">
                                    <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="myonoffswitch" checked>
                                    <label class="onoffswitch-label" for="myonoffswitch">
                                        <span class="onoffswitch-inner"></span>
                                        <span class="onoffswitch-switch"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            <label class="control-label col-md-5 col-xs-5">comment
                                <span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-7 col-xs-7">
                                <textarea class="form-control" name="username"></textarea>
                            </div>
                        </div>

                        <div class="form-group clearfix text-right">
                            <div class="col-md-12">
                                <a href="#" class="btn btn-danger pull-right">Submit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </section>
    </div>
</div>
