<h1 class="main-heading">Create ticket</h1>
<div class="row">
    <div class="col-md-6">
        <div class="form-group clearfix">
            <label class="control-label col-md-5 col-sm-5 col-xs-12">Title</label>
            <div class="col-md-7 col-sm-7 col-xs-12">
                <input class="form-control" type="text" placeholder="Enter ticket title">
            </div>
        </div>
        <div class="form-group clearfix">
            <label class="control-label col-md-5 col-sm-5 col-xs-12">Choose ticket type
                <span class="required" aria-required="true"> * </span>
            </label>
            <div class="col-md-7 col-sm-7 col-xs-12">
                <select class="form-control">
                    <option value="0" selected>Please choose ticket type</option>
                    <option value="1">Bug report</option>
                    <option value="2">Inquiry</option>
                </select>
            </div>
        </div>
        <div class="form-group clearfix">
            <div class="col-md-12">
                <label for="emails" class="control-label">Description</label>
                <textarea class="form-control" name="emails" id="" cols="30" rows="5"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-6">
                <a href="#" class="btn btn-info">Attach a file</a>
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-6">
                <a href="#" class="pull-right btn btn-success">Save</a>
            </div>
        </div>
    </div>
</div>