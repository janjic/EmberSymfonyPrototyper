<h1 class="main-heading">Create ticket</h1>
<div class="row">
    <div class="col-md-6">
        <div class="form-group clearfix">
            <label class="control-label col-md-5 col-sm-5 col-xs-12">Title</label>
            <div class="col-md-7 col-sm-7 col-xs-12">
                {{validated-field doNotShowLabel=true property="title" changeset=changeset type="text"
                                  validateProperty=(action 'validateProperty' changeset "title")}}
            </div>
        </div>
        <div class="form-group clearfix">
            <label class="control-label col-md-5 col-sm-5 col-xs-12">Choose ticket type
                <span class="required" aria-required="true"> * </span>
            </label>
            <div class="col-md-7 col-sm-7 col-xs-12">
                {{#power-select selected=ticketType options=ticketTypes onchange=(action "chooseType") as |name| }}
                    {{name}}
                {{/power-select}}
            </div>
        </div>
        <div class="form-group clearfix">
            <div class="col-md-12">
                <label for="emails" class="control-label">Description</label>
                {{!--<textarea class="form-control" name="emails" id="" cols="30" rows="5"></textarea>--}}
                {{validated-field doNotShowLabel=true property="text" changeset=changeset type="textarea"
                                  validateProperty=(action 'validateProperty' changeset "text")}}
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-6">
                {{dropzone-one-file keepLocal=true addRemoveLinks=true maxFiles=1 onRemovedFile=(action 'removedFile') onAddedFile=(action 'addedFile') }}
                {{!--<a href="#" class="btn btn-info">Attach a file</a>--}}
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-6">
                <button class="pull-right btn btn-success" type="submit" {{action 'saveTicket' changeset}}>
                    {{#if isLoading }}
                        <img src="../../assets/images/ring-alt.gif" class="loader" alt=""> {{trans loadingText }}
                    {{else}}
                        {{trans 'button.save'}}
                    {{/if}}
                </button>
            </div>
        </div>
    </div>
</div>