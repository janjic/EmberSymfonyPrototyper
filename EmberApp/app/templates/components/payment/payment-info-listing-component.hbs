<div class="col-md-3">
    <div class="input-box">
        <div class="upper-box">
            <h5>{{payment.agent.fullName}}</h5>
            <span>{{payment.agentRole}}</span>
            {{!--{{payment.agent.email}}--}}
        </div>
        <div class="lower-box">
            <p><span>Created At</span> <br>
                {{payment.createdAt}}
            </p>
            {{#if payment.payedAt}}
            <p><span>Payed At</span> <br>
                {{payment.agent.nationality}}
            </p>
            {{/if}}

            <p><span>Type</span> <br>
                {{#if (eq payment.paymentType "COMMISSION_TYPE")}}
                    COMMISSION
                {{else}}
                    BONUS
                {{/if}}
            </p>

            <p><span>Amount</span> <br>
                {{payment.totalCommission}} - {{payment.currency}}
            </p>

            <p><span>Memo</span> <br>
                {{payment.memo}}
            </p>

            <p>
                {{#if (not-eq payment.state true)}}
                    {{#link-to viewLink user.id class="button green"}}
                        Pay
                    {{/link-to}}
                {{/if}}
                {{#if (eq payment.state null)}}
                    {{#link-to viewLink user.id class="button red"}}
                        Reject
                    {{/link-to}}
                {{/if}}
            </p>

        </div>
    </div>
</div>