<div class="col-lg-3 col-md-6 col-xs-12">
    <div class="input-box">
        <div class="upper-box">
            <h5>{{payment.agent.fullName}}</h5>
            <span>{{payment.agentRole}}</span>
            {{!--{{payment.agent.email}}--}}
        </div>
        <div class="lower-box">
            <p><span>Created At</span> <br>
                {{printCustomDate payment.createdAt}}
            </p>
            {{#if payment.payedAt}}
                <p><span>Payed At</span> <br>
                    {{printCustomDate payment.payedAt}}
                </p>
            {{/if}}

            <p><span>Type</span> <br>
                {{#if (eq payment.paymentType "COMMISSION_TYPE")}}
                    Commission
                {{else}}
                    Bonus
                {{/if}}
            </p>

            <p><span>State</span> <br>
                {{#if (eq payment.state null)}}
                    Unprocessed
                {{else if (eq payment.state 'true')}}
                    Payed
                {{else}}
                    Rejected
                {{/if}}
            </p>

            <p><span>Amount</span> <br>
                {{payment.totalCommission}} - {{payment.currency}}
            </p>

            <p>
                <span>Memo</span>
                {{#if isEditing}}
                    <span class="pull-right">
                    <span {{action 'saveEdit'}}><i class="fa fa-check"></i></span>
                    <span {{action 'cancelEdit'}}><i class="fa fa-times"></i></span>
                </span>
                {{else}}
                    <span class="pull-right" {{action 'toggleEditing'}}><i class="fa fa-pencil"></i></span>
                {{/if}}
                <br>

                {{#if isEditing}}
                    {{#if _isLoading}}
                        {{inf-loading}}
                    {{else}}
                        {{textarea value=payment.memo}}
                    {{/if}}
                {{/if}}

            </p>

            {{#unless hidePayAllButtons}}
                <p>
                    {{#if (not-eq payment.state 'true')}}
                        <button class="button green" {{action 'processPayment' payment}}>Pay</button>
                    {{/if}}
                    {{#if (eq payment.state null)}}
                        <button class="button red" {{action 'rejectPayment' payment}}>Reject</button>
                    {{/if}}
                </p>
            {{/unless}}
        </div>
    </div>
</div>