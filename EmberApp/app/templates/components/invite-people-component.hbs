<button type="button" class="btn btn-danger" {{action 'openModal'}}>Invite people</button>
{{#bs-modal open=isModalOpen header=false body=false footer=false }}
    {{#bs-modal-header}}
        <h4 class="modal-title" id="invitePeopleModal">
            Invite people
        </h4>
    {{/bs-modal-header}}
    {{#bs-modal-body}}
        {{#with (changeset this validations) as |changeset|}}
            <div class="form-group">
                <input class="form-control"
                       type="text"
                       id="text-agentEmail"
                               value={{agentEmail}}
                        disabled
                >
            </div>
            <div class="form-group">
                {{validated-field
                        type="text"
                        doNotShowLabel = true
                        placeholder= 'Enter email'
                        changeset=changeset
                        property="recipientEmail"
                        validateProperty=(action 'validateProperty' changeset "recipientEmail")
                }}
            </div>
            <div class="form-group">
                <input class="form-control"
                       type="text"
                       id="text-agentCode"
                               value={{agentCode}}
                       disabled
                >
            </div>
            <div class="form-group">
                {{validated-field
                        type="text"
                        doNotShowLabel = true
                        placeholder= 'Subject'
                        changeset=changeset
                        property="emailSubject"
                        validateProperty=(action 'validateProperty' changeset "emailSubject")
                }}
            </div>
            <div class="form-group">
                <textarea class="form-control" name="content" id="textarea-emailContent" cols="30" rows="10"></textarea>
            </div>

            <button {{action "invitePeople" changeset }} type="submit" class="sign-in">
                {{#if isLoading }}
                    <img src="../../../assets/images/ring-alt.gif" alt=""> {{trans loadingText }}
                {{else}}
                    SEND MAIL
                {{/if}}
            </button>
        {{/with}}
    {{/bs-modal-body}}
{{/bs-modal}}
