<div class="col-xs-12 col-sm-6 col-md-3">
    <div class="home-card {{if isLoading "home-card-loading"}}">
        {{#if isLoading}}
            <img src="./assets/images/ring-alt.gif" alt=""> {{trans loading.logging.user}}
        {{else}}
            <h4>{{card-title}}</h4>

            <p class="counter">
                <span class="timer count-title" id="count-number" data-to="{{model.today}}" data-speed="1500"></span>
                <span class="title"> {{trans 'dashboard.labels.today'}}</span>
            </p>
            <p class="counter">
                <span class="title">{{trans 'dashboard.labels.this-month'}}:</span>
                <span class="timer count-title" id="count-number" data-to="{{model.this_month}}" data-speed="1500"></span>
            </p>
            <p class="counter">
                <span class="title">{{trans 'dashboard.labels.total'}}:</span>
                <span class="timer count-title" id="count-number" data-to="{{model.total}}" data-speed="1000"></span>
            </p>
            <i class="fa fa-user" aria-hidden="true"></i>

            <script>
                jQuery(function ($) {
                    // custom formatting example
                    $('#count-number').data('countToOptions', {
                        formatter: function (value, options) {
                            return value.toFixed(options.decimals).replace(/\B(?=(?:\d{3})+(?!\d))/g, ',');
                        }
                    });

                    // start all the timers
                    $('.timer').each(count);

                    function count(options) {
                        var $this = $(this);
                        options = $.extend({}, options || {}, $this.data('countToOptions') || {});
                        $this.countTo(options);
                    }
                });
            </script>
        {{/if}}
    </div>
</div>
