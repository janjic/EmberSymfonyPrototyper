<div class="row">
    <div class="col-md-8 col-sm-12 col-xs-12">
        <div class="input-box clearfix">
            <h1 class="main-heading">{{trans 'mail.edit-mail-list'}}</h1>
            <div class="form-group clearfix">
                <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'mail.mail-list-name'}}</label>
                <div class="col-md-7 col-sm-7 col-xs-12">
                    {{validated-field doNotShowLabel=true property="name" changeset=changeset type="text" validateProperty=(action 'validateProperty' changeset "name")}}
                </div>
            </div>
            <div class="form-group clearfix">
                <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'mail.mail-list-from-name'}}</label>
                <div class="col-md-7 col-sm-7 col-xs-12">
                    {{validated-field doNotShowLabel=true property="fromName" changeset=changeset type="text" validateProperty=(action 'validateProperty' changeset "fromName")}}
                </div>
            </div>
            <div class="form-group clearfix">
                <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'mail.mail-list-from-email'}}</label>
                <div class="col-md-7 col-sm-7 col-xs-12">
                    {{validated-field doNotShowLabel=true property="fromAddress" changeset=changeset type="text" validateProperty=(action 'validateProperty' changeset "fromAddress")}}
                </div>
            </div>
            <div class="form-group clearfix">
                <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'mail.note'}}</label>
                <div class="col-md-7 col-sm-7 col-xs-12">
                    {{validated-field doNotShowLabel=true property="permission_reminder" changeset=changeset type="textarea" validateProperty=(action 'validateProperty' changeset "permission_reminder")}}
                </div>
            </div>
            <div class="form-group clearfix">
                <label class="control-label col-md-5 col-sm-5 col-xs-12">{{trans 'mail.choose-email-addresses'}}
                    <span class="required" aria-required="true"> * </span>
                </label>
                <div class="col-md-7 col-sm-7 col-xs-12">
                    {{inf-select
                            content = model.subscribers
                            optionLabelKey='email'
                            on-search = (perform search)
                            on-add = (action 'agentAdded')
                            on-remove = (action 'agentRemoved')
                            on-change= (action 'agentSelected')
                            multiple = true
                            selected = additionalMails
                    }}
                </div>
            </div>
            <div class="form-group clearfix">
                <a href="#" class="pull-right button green" {{action 'saveMailList' changeset}}>{{trans 'button.save'}}</a>
            </div>
        </div>
    </div>
</div>