<button type="button" class="btn btn-danger" {{action 'openModal'}}>{{trans 'general.change-password'}}</button>
{{#bs-modal open=isModalOpen header=false body=false footer=false }}
    {{#bs-modal-header}}
        <h4 class="modal-title" id="changePassModal">
            {{trans 'general.change-password'}}
        </h4>
    {{/bs-modal-header}}
    {{#bs-modal-body}}
        {{#with (changeset this validations) as |changeset|}}
            <div class="form-group">
                {{validated-field
                        type="password"
                        doNotShowLabel = true
                        placeholder= 'Enter your old password'
                        changeset=changeset
                        property="oldPassword"
                        validateProperty=(action 'validateProperty' changeset "oldPassword")
                }}
            </div>
            <div class="form-group">
                {{validated-field
                        type="password"
                        doNotShowLabel = true
                        placeholder= 'Enter your new password'
                        changeset=changeset
                        property="password"
                        validateProperty=(action 'validateProperty' changeset "password")
                }}
            </div>
            <div class="form-group">
                {{validated-field
                        type="password"
                        doNotShowLabel = true
                        placeholder= 'Repat your password'
                        changeset=changeset
                        property="passwordConfirmation"
                        validateProperty=(action 'validateProperty' changeset "passwordConfirmation")
                }}
            </div>

            <button {{action "setNewPassword" changeset }} type="submit" class="sign-in">
                {{#if isLoading }}
                    <img src="../../../assets/images/ring-alt.gif" alt=""> {{trans loadingText }}
                {{else}}
                    {{trans 'general.reset-password'}}
                {{/if}}
            </button>
        {{/with}}
    {{/bs-modal-body}}
{{/bs-modal}}
