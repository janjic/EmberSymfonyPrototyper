<header>
    <nav class="navbar navbar-fixed-top">
        <div class="container-fluid ">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Content Republic</a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar" id="nav-icon3">
                    <span ></span>
                    <span ></span>
                    <span ></span>
                    <span ></span>
                </button>
            </div>

            <div class="collapse navbar-collapse" id="navbar">
                <ul class="nav navbar-nav navbar-right">
                    {{#bs-dropdown tagName="li"}}
                        {{#bs-dropdown-toggle}}
                            {{#if currentUser.user.image.webPath}}
                                <img src="{{currentUser.user.image.webPath}}" class="img-circle" alt="">
                                {{currentUser.user.username }}<i class="fa fa-caret-down"></i>
                            {{else}}
                                <img src="../assets/images/user-avatar.png" class="img-circle" alt="">
                                {{currentUser.user.username }}<i class="fa fa-caret-down"></i>
                            {{/if}}
                        {{/bs-dropdown-toggle}}
                        {{#bs-dropdown-menu class="header-user-info"}}
                            <li class="top-section">
                                {{#if currentUser.user.image.webPath}}
                                    <div class="img-holder">
                                        <img src="{{currentUser.user.image.webPath}}" class="img-circle" alt="">
                                    </div>
                                {{else}}
                                    <div class="img-holder">
                                        <img src="../assets/images/user-avatar.png" class="img-circle" alt="">
                                    </div>
                                {{/if}}
                                <div class="info-actions">
                                    <p>{{currentUser.user.fullName }}</p>
                                    <p>{{currentUser.user.email}}</p>
                                    {{#link-to profileRoute class="button green icon-btn" }}View profile{{/link-to}}
                                </div>
                            </li>
                            <li class="bottom-section">
                                <a href="#" class="button red icon-btn">Edit profile</a>
                                <a href="#" class="button red icon-btn" {{action 'logout'}}>Logout</a>
                            </li>


                        {{/bs-dropdown-menu}}
                    {{/bs-dropdown}}
                    {{#bs-dropdown tagName="li"}}
                        {{#bs-dropdown-toggle}}<a href="#"><i class="fa fa-globe" aria-hidden="true"></i></a>{{/bs-dropdown-toggle}}
                        {{#bs-dropdown-menu class="header-notifications"}}
                            {{#each agentNotifications as |notification|}}
                                <li>
                                    <a class="notification-item {{if notification.isSeen "seen"}}" {{action "transitionTo" notification notification.link notification.newAgent}} href="#">
                                        <div class="img-holder">
                                            {{fa-icon "user"}}
                                        </div>
                                        <div class="notification-item-content">
                                            <p>{{notification.type}} <span>{{notification.agent.email}} / {{notification.id}}</span></p>
                                            <span class="date">{{notification.createdAt}}</span>
                                        </div>
                                    </a>
                                </li>
                            {{/each}}
                            <li>
                                <a class="notification-item seen" href="#">
                                    <div class="img-holder">
                                        {{fa-icon "credit-card"}}
                                    </div>
                                    <div class="notification-item-content">
                                        <p>New order has been confirmed by <span>username@mail.com</span></p>
                                        <span class="date">December 20, 2016 14:57</span>
                                    </div>
                                </a>
                            </li>
                            <li>
                                <a class="notification-item seen" href="#">
                                    <div class="img-holder">
                                        {{fa-icon "envelope-o"}}
                                    </div>
                                    <div class="notification-item-content">
                                        <p>New order has been confirmed by <span>username@mail.com</span></p>
                                        <span class="date">December 20, 2016 14:57</span>
                                    </div>
                                </a>
                            </li>
                            <li class="view-all-button">
                                <a href="#" {{action "transitionToRoute" "dashboard.notifications-all"}} class="view-all button green">{{trans "button.view-all"}}</a>
                            </li>
                        {{/bs-dropdown-menu}}
                    {{/bs-dropdown}}
                    {{#bs-dropdown tagName="li"}}
                        {{#bs-dropdown-toggle}}<a href="#"><i class="fa fa-envelope-open-o" aria-hidden="true"></i></a>{{/bs-dropdown-toggle}}
                        {{#bs-dropdown-menu class="header-messages"}}
                            {{#each messageNotifications as |notification|}}
                                <li>
                                    <a class="message-item {{if notification.isSeen "seen"}}" {{action "transitionTo" notification notification.link}} href="#">
                                        <div class="img-holder">
                                            {{fa-icon "envelope-o"}}
                                        </div>
                                        <div class="message-item-content">
                                            <p>{{notification.type}} <span>username@mail.com / {{notification.id}}</span></p>
                                            <span class="date">{{notification.createdAt}}</span>
                                        </div>
                                    </a>
                                </li>
                            {{/each}}
                            <li>
                                <a class="message-item" href="#">
                                    <div class="img-holder">
                                        <img src="../assets/images/user-avatar.png" title="Username">
                                    </div>
                                    <div class="message-item-content">
                                        <p>Test test test <span><strong>username@mail.com</strong></span></p>
                                        <span class="date">December 20, 2016 14:57</span>
                                    </div>
                                </a>
                            </li>
                            <li>
                                <a class="message-item seen" href="#">
                                    <div class="img-holder">
                                        <img src="../assets/images/user-avatar.png" title="Username">
                                    </div>
                                    <div class="message-item-content">
                                        <p>Test test test <span><strong>username@mail.com</strong></span></p>
                                        <span class="date">December 20, 2016 14:57</span>
                                    </div>
                                </a>
                            </li>
                            <li class="view-all-button">
                                <a href="#" class="view-all button green">{{trans "button.view-all"}}</a>
                            </li>
                        {{/bs-dropdown-menu}}
                    {{/bs-dropdown}}
                </ul>
            </div>
        </div>
        <section class="mobile-toggle">
            <a href="#" class="toggle-left-section collapsed">
            </a>
        </section>
    </nav>
</header>