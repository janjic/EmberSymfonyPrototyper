<div class="col-md-3">
    <div class="input-box">
        <div class="upper-box">
            <div class="info-box-icons">
                {{#link-to viewLink user.id class="button icon-btn rounded-btn"}}
                    {{fa-icon 'eye'}}
                {{/link-to}}
                <div class="img-holder">
                    {{#if user.image.webPath }}
                        <img class="img-circle" src="{{user.image.webPath}}" alt="">
                    {{else}}
                        <img class="img-circle" src="../../assets/images/user-avatar.png" alt="Avatar">
                    {{/if}}
                </div>
                {{#link-to editLink user.id class="button icon-btn rounded-btn"}}
                    {{fa-icon 'pencil'}}
                {{/link-to}}
            </div>
            <h5>{{user.fullName}}</h5>
            <span>{{user.group.name}}</span>
        </div>
        <div class="lower-box">
            <p><span>Username</span> <br>
                {{user.username}}
            </p>
            <p><span>Country</span> <br>
                {{user.country}}
            </p>
            <p><span>Status</span> <br>
                {{#if user.enabled}}
                    Enabled
                {{else}}
                    Not enabled
                {{/if}}
            </p>
        </div>
    </div>
</div>
