<li class="dd-item dd3-item" data-id-ember-data="{{data-id-ember-data}}" data-id="{{item.id}}" data-name="{{item.name}}" data-link="{{item.link}}" data-new="{{item.isNew}}" data-deleted="{{item.isDeleted}}">
    {{#if item.children.length }}
        <button data-action="collapse" type="button">Collapse</button>
        <button data-action="expand" type="button" style="display: none;">Expand</button>
    {{/if}}

    <div class="dd-handle dd3-handle">Drag</div>
    <div class="dd3-content">{{item.name}}</div>

    <span class="button-delete btn btn-default btn-xs pull-right" data-owner-id="{{item.id}}" {{action 'deleteItemOwn'}}>
         <i class="fa fa-times-circle-o" aria-hidden="true"></i>
    </span>

    <span class="button-edit btn btn-default btn-xs pull-right" data-owner-id="{{item.id}}"  {{action 'setCurrentEditingItem'}}>
        <i class="fa fa-pencil" aria-hidden="true"></i>
    </span>

    {{#if item.children}}
        {{role/role-crud-items-component items=item.children setCurrentEditing=setCurrentEditing deleteItem=deleteItem}}
    {{/if}}

</li>