<div class="all-agents-card-view">
    <div class="row">
        {{#each model as |agent|}}
            <div class="col-md-3">
                <div class="input-box">
                    <div class="upper-box">
                        <div class="info-box-icons">
                            {{# if viewLink }}
                                {{#link-to viewLink m.id class="button green icon-btn"}}
                                    {{fa-icon 'eye'}}
                                {{/link-to}}
                            {{/if}}
                            <div class="img-holder">
                                <img class="img-circle" src="{{agent.image.webPath}}" alt="">
                            </div>
                            {{# if editLink }}
                                {{#link-to editLink m.id class="button red icon-btn"}}
                                    {{fa-icon 'pencil'}}
                                {{/link-to}}
                            {{/if}}
                        </div>
                        <h5>{{agent.fullName}}</h5>
                        <span>{{agent.group.name}}</span>
                    </div>
                    <div class="lower-box">
                        <p><span>Country</span> <br>
                            {{agent.nationality}}
                        </p>
                        <p><span>Email</span> <br>
                            {{agent.email}}
                        </p>
                        <p><span>Status</span> <br>
                            {{#if agent.enabled}}
                                Enabled
                            {{else}}
                                Not enabled
                            {{/if}}
                        </p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
