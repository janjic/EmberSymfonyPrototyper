<div class="second-menu" hidden data-id="{{id}}">
    <div class="flex-view">
        <div class="left-side">
            <div class="img-holder clearfix">
                <img class="avatar" src="{{if baseImageUrl baseImageUrl '../assets/images/user-avatar.png'}}">
                <a class="button green icon-btn linkToEdit"><i class="fa fa-pencil"></i></a>
            </div>
            {{ groupName }}
        </div>

        <div class="actions">
            {{#link-to "dashboard.agent.agents.agent-view" id class="button green icon-btn"}} {{trans 'button.view-profile'}} {{/link-to}}
            {{#link-to "dashboard.agent.agents.agent-edit" id class="button green icon-btn"}} {{trans 'button.edit-profile'}} {{/link-to}}
        </div>
    </div>
    <a class="hideCard">{{fa-icon "times-circle-o"}}</a>
</div>